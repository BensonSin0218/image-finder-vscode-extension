{
  "name": "image-explorer",
  "displayName": "image-explorer",
  "description": "Explorer view to scan and display images in the workspace",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "image-explorer.refreshAllViews",
        "title": "Image Explorer: Refresh All Views",
        "icon": "$(refresh)"
      },
      {
        "command": "image-explorer.revealInExplorer",
        "title": "Image Explorer: Reveal in Explorer",
        "icon": "$(folder)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "image-explorer-container",
          "title": "Image Explorer",
          "icon": "$(file-media)"
        }
      ]
    },
    "views": {
      "image-explorer-container": [
        {
          "id": "image-explorer.imageItemsTreeView",
          "name": "Images"
        },
        {
          "id": "image-explorer.imageDetailItemsTreeView",
          "name": "Image Details"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "image-explorer.refreshAllViews",
          "when": "view == image-explorer.imageItemsTreeView",
          "group": "navigation@1"
        },
        {
          "command": "image-explorer.revealInExplorer",
          "when": "view == image-explorer.imageDetailItemsTreeView",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}