{
  "name": "image-explorer",
  "displayName": "image-explorer",
  "description": "Explorer view to scan and display images in the workspace",
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "image-explorer.refreshAllViews",
        "title": "Image Explorer: Refresh All Views",
        "icon": "$(refresh)"
      },
      {
        "command": "image-explorer.openSettings",
        "title": "Image Explorer: Open Settings",
        "icon": "$(settings)"
      },
      {
        "command": "image-explorer.revealInExplorer",
        "title": "Image Explorer: Reveal in Explorer",
        "icon": "$(folder)"
      },
      {
        "command": "image-explorer.findSimilarImages",
        "title": "Image Explorer: Find Similar Images",
        "icon": "$(search-view-icon)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "image-explorer-container",
          "title": "Image Explorer",
          "icon": "$(file-media)"
        }
      ]
    },
    "views": {
      "image-explorer-container": [
        {
          "id": "image-explorer.imageTreeItemsTreeView",
          "name": "Images"
        },
        {
          "id": "image-explorer.imageDetailTreeItemsTreeView",
          "name": "Image Details"
        },
        {
          "id": "image-explorer.similarImageTreeItemsTreeView",
          "name": "Similar Images"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "image-explorer.refreshAllViews",
          "when": "view == image-explorer.imageTreeItemsTreeView",
          "group": "navigation@1"
        },
        {
          "command": "image-explorer.openSettings",
          "when": "view == image-explorer.imageTreeItemsTreeView",
          "group": "navigation@2"
        },
        {
          "command": "image-explorer.revealInExplorer",
          "when": "view == image-explorer.imageDetailTreeItemsTreeView",
          "group": "navigation@1"
        },
        {
          "command": "image-explorer.findSimilarImages",
          "when": "view == image-explorer.similarImageTreeItemsTreeView",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Image Explorer",
      "properties": {
        "image-explorer.includeDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Workspace to scan for images",
          "scope": "resource"
        },
        "image-explorer.skipSymbolicLink": {
          "type": "boolean",
          "default": true,
          "description": "Skip symbolic links when scanning for images",
          "scope": "resource"
        },
        "image-explorer.similarityThreshold": {
          "type": "number",
          "default": 90,
          "description": "Similarity threshold (0-100)% for finding similar images",
          "scope": "resource"
        },
        "image-explorer.similarityImageResize": {
          "type": "number",
          "default": 32,
          "description": "Similarity image resize for finding similar images",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "hamming-distance": "^1.0.0",
    "sharp": "^0.33.5"
  }
}